

 
  
  {{#if error}}
    <div class="container">
      <div class="row">
        <div class="col-lg-12 gy-5">
          <div class="error">{{@root.error}}</div>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if succes}}
    <div class="container">
      <div class="row">
        <div class="col-lg-12 gy-5">
          <div class="succes">{{@root.succes}}</div>
        </div>
      </div>
    </div>
  {{/if}}







<main id="main">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-lg-5">
        <form action="/auth" method="POST" class="registration">
          <div class="registration__title">Авторизация</div>
          <div class="registration__value-name">
            <input name="email" type="text" placeholder="Email">
          </div>
          <div class="registration__value-name">
            <input name="password" type="password" placeholder="Пароль">
          </div>
          <button id="reg">Авторизоваться</button>
          <a href="/reg" id="auth">Регистрация</a>
          <a href="/password" class="registration__reset-password">Забыл пароль</a>
          <input type="hidden" name="_csrf" value="{{@root.csrf}}">
        </form>
      </div>
    </div>
  </div>
</main>


