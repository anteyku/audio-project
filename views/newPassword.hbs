  {{#if error}}
    <div class="container">
      <div class="row">
        <div class="col-lg-12 gy-5">
          <div class="error">{{@root.error}}</div>
        </div>
      </div>
    </div>
  {{/if}}

  {{#if succes}}
    <div class="container">
      <div class="row">
        <div class="col-lg-12 gy-5">
          <div class="succes">{{@root.succes}}</div>
        </div>
      </div>
    </div>
  {{/if}}







<main id="main" class="password">
  {{#each check}}
    {{#if this.resetToken}}
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <form action="/password/newPass" method="POST" class="registration">
            <div class="registration__title">Новый пароль</div>
            <div class="registration__value-name">
              <input name="password" type="password" placeholder="Пароль">
            </div>
            <input type="hidden" name="_id" value="{{_id}}">
            <input type="hidden" name="token" value="{{resetToken}}">
            <button id="reg">Сменить</button>
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
          </form>
        </div>
      </div>
    </div>
    {{/if}}
  {{/each}}
</main>


